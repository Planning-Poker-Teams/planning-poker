{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "jsx": "preserve",
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["src/asset/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@router/*": ["src/router/*"],
      "@store/*": ["src/store/*"],
      "@views/*": ["src/views/*"],
    },
  },
  "include": ["src/**/*.ts", "src/**/*.vue", "tests/**/*.ts"]
}

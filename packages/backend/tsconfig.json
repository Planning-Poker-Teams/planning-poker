{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "ES2019",
    "module": "commonjs",
    "types": [
      "node",
      "@types/jest"
    ],
    "baseUrl": ".",
    "paths": {
      "@cqrs/*": ["src/cqrs/*"],
      "@domain/*": ["src/domain/*"],
      "@handlers/*": ["src/handlers/*"],
      "@interactors/*": ["src/interactors/*"],
      "@repositories/*": ["src/repositories/*"],
    },
    "lib": ["esnext"]
  },
  "include": ["src/**/*.ts"]
}
